  countryId String @unique // e.g. "th" or "thailand"
  code      String // ISO code "TH"
  name      String
  imageHeroUrl String? 
  media        Media[]
  coords Json? // GeoJSON point for map centering
  continent     String?
  subRegion     String?
  officialName  String?
  capital       String?
  regionCode    String?
  subRegionCode String?
  population    Int?
  areaKm2       Float?
  
  // Practical Info
  utilities     Json?
  internet      Json?
  gettingAround Json?

// language info
  languages Json? // { official: ["Thai"], spoken: ["Thai", "English"], primaryScript: "Thai" }
  commonPhrases Json? // { hello: { local: "สวัสดี", romanized: "Sawasdee", audio: "url?" }
  
//  Money info
  currency    Json?
  budget      Json?
  cashCulture Json?
  

  safety Json? /* {
    overall: "safe",
    crimeLevel: "low",
    pettyTheft: "moderate-tourist-areas",
    violentCrime: "rare",
    scamsCommon: ["tuk-tuk-overcharge", "gem-scam", "taxi-meter"],
