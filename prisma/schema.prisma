    areasCaution: ["Deep South provinces"],
    nightSafety: "safe-normal-precautions",
    soloFemaleTravel: "safe-normal-precautions",
    lastUpdated: "2025-01-15"
  } */

  emergency Json? /* {
    police: "191",
    ambulance: "1669",
    fire: "199",
    touristPolice: "1155",
    embassies: [
      { country: "USA", phone: "+66-2-205-4000", address: "95 Wireless Road, Bangkok" },
      { country: "UK", phone: "+66-2-305-8333", address: "14 Wireless Road, Bangkok" }
    ]
  } */

   // Visa & Entry (CRITICAL)
  visaEntry Json? /* {
    visaFreeCountries: ["US-30days", "UK-30days", "EU-30days"],
